<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="InMain_dzButtons">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InMain_classButtons">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@color/ClassworkColor</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


<!-- Class2 -->
    <style name="LoginButton">
        <item name="android:textColor">@color/Class2ButtonText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">180dp</item>
    </style>


    <!-- DZ2 -->
    <style name="DZ2Flag">
        <item name="android:layout_width">240dp</item>
